<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bbbb1"


    android:id="@+id/android_login"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="270dp"
        android:background="@drawable/shadowss"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="-40dp"
        android:layout_centerHorizontal="true"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColor="@color/red_color"
                android:layout_marginTop="5dp"
                android:text="Forgot your password ?"

                />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:text="Enter your email in the form below and"
                />
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:text="we'll send you instructions for creating a new one."
                />
        </LinearLayout>


        //Email
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


         </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <EditText
                android:layout_width="300dp"
                android:layout_height="40dp"

                android:layout_centerHorizontal="true"
                android:layout_below="@+id/trans_logo"
                android:textSize="15dp"
                android:padding="5dp"
                android:ems="10"
                android:hint="Enter Email"
                android:layout_marginTop="20dp"
                android:drawablePadding="10dp"
                android:id="@+id/forgot_email"
                android:textIsSelectable="false"
                android:inputType="textEmailAddress"
                android:background="@drawable/round_border"
                android:drawableStart="@drawable/ic_baseline_email_24"
                android:textColorHint="@color/colorHint"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/reset_link_btn"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:textAlignment="center"
                android:layout_marginTop="30dp"
                android:text="SEND RESET LINK"
                android:textColor="#fff"
                android:background="@drawable/button_selector"
                android:layout_centerInParent="true"
                android:gravity="center"

                ></Button>

        </LinearLayout>



    </LinearLayout>




</LinearLayout>