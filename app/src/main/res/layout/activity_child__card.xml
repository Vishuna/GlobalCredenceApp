<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:background="@color/basic_body_color">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/institute_pager"
        android:layout_width="match_parent"
        android:layout_below="@+id/institute_profile_tab_header"
        android:layout_height="1000dp"></androidx.viewpager.widget.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@color/basic_body_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/basic_body_color"
                android:orientation="vertical"
                android:padding="20dp">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_alignParentBottom="true"
                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:orientation="vertical"
                        android:background="@color/theme_color">

                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:layout_width="70dp"
                            android:layout_height="150dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="40dp"
                            android:id="@+id/parent_child_pic"
                            android:background="@drawable/childcard_p">

                        </com.mikhaellopez.circularimageview.CircularImageView>

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:textColor="#fff"
                            android:textSize="16sp"
                            android:text="Rakesh Singh"/>

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:textColor="#fff"
                            android:textSize="16sp"
                            android:text="Global Credence International School"

                            />
                    </LinearLayout>
                   </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_centerHorizontal="true"
                    android:background="#fff"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_below="@+id/header"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:weightSum="2">

                        <ImageView
                            android:id="@+id/ChildCard_Class"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/childcard_cc"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="23dp"
                            android:text="Class 1"
                            android:textColor="@color/black"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="50dp"
                            android:text="Class"
                            android:textColor="@color/dark_gray"
                            android:background="@drawable/border"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:weightSum="2"
                        >

                        <ImageView

                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/childcard_c" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="23dp"
                            android:text="1"
                            android:textColor="@color/black"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="50dp"
                            android:text="Roll.No"
                            android:id="@+id/user_phone"
                            android:background="@drawable/border"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:weightSum="2"

                        >

                        <ImageView

                            android:layout_width="30dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/childcard_p"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="23dp"
                            android:text="Kamal Nath Singh"
                            android:textColor="@color/black"
                            android:id="@+id/facebook_text"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="50dp"
                            android:text="Parent"
                            android:textColor="@color/dark_gray"
                            android:background="@drawable/border"/>

                    </RelativeLayout>


</LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>




</androidx.drawerlayout.widget.DrawerLayout>
