            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

<!--                <RelativeLayout-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content">-->


<!--                    <ImageView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:id="@+id/issue_book_upward"-->
<!--                        android:src="@drawable/upward_arrow_foreground"-->
<!--                        android:layout_marginLeft="-35dp"-->

<!--                        />-->
                    <TextView
                        android:id="@+id/issue_book_btn"
                        android:layout_width="110dp"
                        android:layout_height="35dp"
                        android:padding="0dp"
                        android:drawableStart="@drawable/ic_baseline_arrow_upward_24"
                        android:text="Issue Book"
                        android:background="@drawable/button_selector"
                        android:gravity="left|center"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_gravity="center"
                        />

<!--                </RelativeLayout>-->
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/linear_issue_table"
                    android:layout_alignParentBottom="true"

                    >
                <HorizontalScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scrollbars="horizontal">
                    <TableLayout
                        android:id="@+id/issue_book_table"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="0dp"
                        android:paddingRight="0dp"
                        android:divider="@color/table_head"
                        android:showDividers="middle"
                        android:stretchColumns="*"
                        >

                    </TableLayout>

                </HorizontalScrollView>
            </LinearLayout>



            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:id="@+id/navigationView"
        android:layout_gravity="start"
        app:menu="@menu/activity_my_profile_drawer"
        app:headerLayout="@layout/nav_header_home"
