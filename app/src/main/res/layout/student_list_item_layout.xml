<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_border"
    >


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"

   >

    <TextView
        android:id="@+id/student_name"
        android:layout_width="89dp"
        android:layout_height="40dp"
        android:hint="Name">

    </TextView>


    <TextView
        android:id="@+id/student_roll_number"
        android:layout_width="71dp"
        android:layout_height="40dp"

        android:hint="Roll No."
        android:layout_gravity="center">

    </TextView>


    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="184dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        >

        <RadioButton
            android:id="@+id/present"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/dark_green_color"

            android:text="P"></RadioButton>

        <RadioButton
            android:id="@+id/absent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:buttonTint="@color/red_color"
            android:text="A"></RadioButton>

        <RadioButton
            android:id="@+id/leave"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:buttonTint="@color/theme_color"
            android:text="L"></RadioButton>
    </RadioGroup>
</LinearLayout>

</LinearLayout>